<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="@color/background">

    <ImageView
        android:id="@+id/nav_header_icon"
        android:layout_width="@dimen/menu_header_icon_width"
        android:layout_height="@dimen/menu_header_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_header_profile" />

    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="@dimen/menu_header_title_width"
        android:layout_height="@dimen/menu_header_title_height"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@id/nav_header_ratings_number"
        android:layout_above="@id/nav_header_ratings_number"
        android:text="Hello Jingze"
        android:maxLines="1"
        android:textSize="@dimen/textSize_large"
        android:textColor="@color/text_white"/>

    <TextView
        android:id="@+id/nav_header_ratings_number"
        android:layout_width="@dimen/menu_header_ratings_width"
        android:layout_height="@dimen/icon_micro"
        android:layout_toRightOf="@id/nav_header_icon"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_alignBottom="@id/nav_header_icon"
        android:layout_marginBottom="@dimen/spacing_micro"
        android:text="5.0"
        android:textSize="@dimen/textSize_small"
        android:textColor="@color/text_white" />

    <ImageView
        android:layout_width="@dimen/icon_extra_small"
        android:layout_height="@dimen/icon_extra_small"
        android:src="@drawable/ic_menu_header_star"
        android:layout_alignBottom="@id/nav_header_ratings_number"
        android:layout_toRightOf="@+id/nav_header_ratings_number"  />

</RelativeLayout>
